<h2>Tasks for <%= @list.name %></h2>


<ul>
  <%= for task <- @list.tasks do %>
    <p class="task">
      <span class="task-name"><%= task.name %>
      <%= link "Edit/Move", to: task_path(@conn, :edit, task), class: "btn btn-default btn-xs" %>
      <%= link "Delete", to: task_path(@conn, :delete, task), method: :delete, class: "btn btn-danger btn-xs" %></span>
    </p>
  <% end %>
</ul>
<p><%= link "Add Task", to: task_path(@conn, :new, list_id: @list.id) %>
</p>
