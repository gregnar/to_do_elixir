<h2>Tasks for <%= @list.name %></h2>

<ul>
  <%= for task <- @list.tasks do %>
    <li>
      <strong><%= task.name %></strong>
      <%= link "Edit/Move", to: task_path(@conn, :edit, task), class: "btn btn-default btn-xs" %>
      <%= link "Delete", to: task_path(@conn, :delete, task), method: :delete, class: "btn btn-danger btn-xs" %>
    </li>
  <% end %>
</ul>

<%= link "Back", to: list_path(@conn, :index) %>